#!/usr/bin/env ruby

require 'optparse'
require 'methadone'
require 'sphinxcrawl'

class App
  include Methadone::Main
  include Methadone::CLILogging

  main do |index|
    index ||= 'index.html'
    exit_now!(1, "file #{index} not found") unless File.exists?(index)
    index = index+'/index.html' if File.directory?(index)
    exit_now!(1, "file #{index} not found") unless File.exists?(index)
    page = Sphinxcrawl::Page.new('/', File.read(index))
    stream = Sphinxcrawl::Stream.new(page)
    puts stream.to_xml
  end

  description 'Generate sphinx xml stream from html pages'
  arg :index, :optional

  version Sphinxcrawl::VERSION
  use_log_level_option
  go!
end
